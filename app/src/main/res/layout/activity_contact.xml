<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >>

    <android.support.v7.widget.Toolbar
        android:id="@+id/myBar"
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        style="@style/AppTheme.NoActionBar"
        app:title="Our Contacts"
        app:titleTextColor="#ffffff">

    </android.support.v7.widget.Toolbar>



    <TextView
        android:text="Dainik Yuvavarta - \nNew Akole Road, Eastward to B.Ed College, \nSangamner, Tal. Sangamner, Dist. A'Nagar-422605 "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/address"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:layout_marginLeft="100dp"
        android:textColor="#000000" />


    <TextView
        android:text="(02425)  225129"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/phone"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="#000000" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/myBar"
        android:layout_marginLeft="25dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?android:attr/listChoiceIndicatorSingle"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView4"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="Office Address :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/textView5"
            android:typeface="serif"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?android:attr/listChoiceIndicatorSingle"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView7"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="Phone :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/textView7"
            android:typeface="serif"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mobile"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?android:attr/listChoiceIndicatorSingle"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView8"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="Mobile :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/textView9"
            android:typeface="serif"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark" />
    </TableRow>
    <TextView
        android:text="  9822039460"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/mobile"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="#000000" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mail"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?android:attr/listChoiceIndicatorSingle"
            android:layout_below="@+id/textView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView9"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="Emai-ID :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/textView11"
            android:typeface="serif"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark" />
    </TableRow>
    <TextView
        android:text="dailyyuvavarta@gmail.com"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@+id/mail"
        android:typeface="serif"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        android:textColorLink="?attr/colorPrimary"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/website"
        android:layout_marginLeft="25dp"
        android:gravity="center_vertical"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:transitionGroup="false">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="?android:attr/listChoiceIndicatorSingle"
            android:layout_below="@+id/email"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView10"
            android:layout_marginLeft="10dp" />

        <TextView
            android:text="Website :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/textView13"
            android:typeface="serif"
            android:textSize="15dp"
            android:textColor="@color/colorPrimaryDark" />
    </TableRow>
    <TextView
        android:text="http://www.yuvavarta.in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/web"
        android:textSize="18dp"
        android:layout_marginLeft="100dp"        android:textColor="#000000"
        android:typeface="serif"
        android:layout_below="@+id/website"
        android:layout_marginTop="5dp"
        android:textColorLink="@color/colorPrimaryDark" />


</RelativeLayout>
